.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: 2rpx;
}

.swiper-box .wx-swiper-dot {
  width: 13rpx;
  display: inline-flex;
  height: 13rpx;
  margin-left: 10rpx;
  justify-content: space-between;
}

.swiper-box .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: #fff;
  border-radius: 13rpx;
}

.swiper-box .wx-swiper-dot-active::before {
  background: #ff495e;
}

.index-search-box.active {
  position: fixed;
  background: #ff495e;
}

/* 搜索框(非固定) */

.index-search-box {
  position: unset;
  background: #f1f1f2;
  padding: 10px 0;
}

.index-search-box .index-search {
  padding: 0 10px;
  line-height: 60rpx;
  border-radius: unset;
}

.index-search-box text {
  color: #999;
}

/* 输入框四角风格 */

.index-search-box .index-search.angle-radius {
  border-radius: 5px;
}

.index-search-box .index-search.angle-round {
  border-radius: 80rpx;
}

/* 文字对齐 */

.index-search-box .index-search.text-center {
  text-align: center;
}

.index-search-box .index-search.text-right {
  text-align: right;
}
